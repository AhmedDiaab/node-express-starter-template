{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug App",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js", // Use the direct path to ts-node.js
            "args": [
                "${workspaceFolder}/src/index.ts"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "restart": true
        }
    ]
}